<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.InfoPlayerActivity">

    <TextView
        android:id="@+id/pseudoDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Pseudo : "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/pseudoDetailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text = ""/>

    <TextView
        android:id="@+id/GenderDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "gender : "
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/pseudoDetail"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = ""
        android:layout_marginTop="30dp"

        app:layout_constraintTop_toBottomOf="@id/pseudoDetailLabel"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/birthsDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "birthsdate : "
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/GenderDetail"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/birthDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = ""
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/gender"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/labelWeaponDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text = "Weapon : "
        app:layout_constraintTop_toBottomOf="@id/birthsDetail"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/valueWeaponDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = ""
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/birthDetail"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageWeaponDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/birthDetail"
        android:text = ""
        tools:ignore="MissingConstraints" />



</android.support.constraint.ConstraintLayout>